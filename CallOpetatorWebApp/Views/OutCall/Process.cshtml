@model ViewModels.OutCall

<div class="text-center">
    <h1 class="display-4">Идет звонок (оператор '{@ViewBag.OperatorName}')...</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Приветствие</th>
                <th scope="col">Вопросы</th>
                <th scope="col">ФИО</th>
                <th scope="col">Номер</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.Welcome</th>
                <td>@Model.Questions</td>
                <td>@Model.ContactFIO</td>
                <td>@Model.ContactMobilePhone</td>
            </tr>
        </tbody>
    </table>

    <form asp-controller="OutCall" asp-action="Process" method="get">
        <input asp-for="PhoneCallId" type="hidden">
        <button type="submit">Завершить</button>
    </form>
</div>